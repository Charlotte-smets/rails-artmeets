<div class="container-fluid artworks-index">
  <div class="d-flex justify-content-between align-bottom page-title">
    <h1>Discover <br>new Talents</h1>
    <img class="arrow" src="https://res.cloudinary.com/charlotte-smets/image/upload/v1637834261/arrow_htgxnl.png" width="150">
  </div>
  <hr>
  <div class="swiper" data-controller="swiper">
    <div class="swiper-wrapper">
      <% @artworks_filtered.each do |artwork| %>
        <div class="swiper-slide">
          <div class="artwork-deck-card">
            <%= cl_image_tag artwork.photo.key %>
            <div class="artwork-info">
              <h3><%= artwork.title %> </h3>
              <h4><%= artwork.artist.artist_name %></h3>
              <br>
              <p><%= artwork.date %></p>
              <p><%= artwork.style %></p>
              <p><%= artwork.artist.artist_name %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-around align-items-center card-like-dislike-btn">
    <%= link_to dislike_gallerist_path(@gallerist, artwork: @artwork), method: :post, class:"btn-next" do %>
      <i class="fas fa-times"></i>
    <% end %>
    <%= link_to like_gallerist_path(@gallerist, artwork: @artwork), method: :post, class:"btn-love" do %>
      <i class="fas fa-heart"></i>
    <% end %>
  </div>
